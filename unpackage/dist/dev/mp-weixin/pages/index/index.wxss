
.scroll-text {
	font-size: 12px;
	display: inline-block;
	-webkit-animation: scroll 18s linear infinite;
	        animation: scroll 18s linear infinite;
	/* 动画持续时间和速度可以调整 */
}
@-webkit-keyframes scroll {
0% {
		-webkit-transform: translateX(100%);
		        transform: translateX(100%);
		/* 初始位置在视口外 */
}
100% {
		-webkit-transform: translateX(-100%);
		        transform: translateX(-100%);
		/* 到达视口外 */
}
}
@keyframes scroll {
0% {
		-webkit-transform: translateX(100%);
		        transform: translateX(100%);
		/* 初始位置在视口外 */
}
100% {
		-webkit-transform: translateX(-100%);
		        transform: translateX(-100%);
		/* 到达视口外 */
}
}
